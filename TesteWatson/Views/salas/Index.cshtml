@model IEnumerable<TesteWatson.Models.sala>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Escola
        </th>
        <th>
            Série
        </th>
        <th>
            Turma
        </th>
        <th>
            Nome
        </th>
        <th>
            Ano
        </th>
        <th>
            Ativa?
        </th>
        
        <th></th>
    </tr>
@if (Model != null) {

    foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.escola.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ano_escolar)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.turma)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ano_corrente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ativo)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
                @Html.ActionLink("Details", "Details", new { id=item.id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.id })
            </td>
        </tr>
    }
}
</table>
