@model IEnumerable<TesteWatson.Models.aluno>

@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Adicionar novo", "Cadastrar")
    </p>
    <fieldset>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.matricula)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.dtnascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.escola.nome)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.matricula)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.dtnascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.escola.nome)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                        @Html.ActionLink("Excluir", "Delete", new { id = item.id })
                    </td>
                </tr>
            }

        </table>
    </fieldset>
</body>
</html>
